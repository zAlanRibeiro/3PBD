1- SELECT NOME 
FROM EMPREGADO
WHERE FK_DEPTO = '2';

2- SELECT PROJETO.Numero AS Numero_Projeto, DEPARTAMENTO_PROJETO.NUMERODEPTO AS Numero_Departamento, EMPREGADO.Nome AS Nome_Gerente
FROM PROJETO
JOIN DEPARTAMENTO_PROJETO ON PROJETO.Numero = DEPARTAMENTO_PROJETO.NUMEROPROJETO
JOIN DEPARTAMENTO ON DEPARTAMENTO_PROJETO.NUMERODEPTO = DEPARTAMENTO.Numero
JOIN EMPREGADO ON DEPARTAMENTO.RGGERENTE = EMPREGADO.RG
WHERE PROJETO.Localizacao = 'SÃ£o Paulo';

3- SELECT EMPREGADO.RG, EMPREGADO.Nome
FROM EMPREGADO
JOIN EMPREGADO_PROJETO ON EMPREGADO.RG = EMPREGADO_PROJETO.RGEmpregado
JOIN DEPARTAMENTO_PROJETO ON EMPREGADO_PROJETO.NumeroProjeto = DEPARTAMENTO_PROJETO.NUMEROPROJETO
WHERE DEPARTAMENTO_PROJETO.NUMERODEPTO = 3
GROUP BY EMPREGADO.RG, EMPREGADO.Nome
HAVING COUNT(DISTINCT EMPREGADO_PROJETO.NumeroProjeto) = (
    SELECT COUNT(DISTINCT NUMEROPROJETO)
    FROM DEPARTAMENTO_PROJETO
    WHERE NUMERODEPTO = 3
);

4- SELECT DISTINCT PROJETO.Numero AS Numero_Projeto
FROM PROJETO
LEFT JOIN DEPARTAMENTO_PROJETO ON PROJETO.Numero = DEPARTAMENTO_PROJETO.NUMEROPROJETO
LEFT JOIN DEPARTAMENTO ON DEPARTAMENTO_PROJETO.NUMERODEPTO = DEPARTAMENTO.Numero
LEFT JOIN EMPREGADO_PROJETO ON PROJETO.Numero = EMPREGADO_PROJETO.NumeroProjeto
LEFT JOIN EMPREGADO ON EMPREGADO_PROJETO.RGEmpregado = EMPREGADO.RG
WHERE EMPREGADO.Nome = 'Fernando'
   OR DEPARTAMENTO.RGGERENTE = (
       SELECT RG FROM EMPREGADO WHERE Nome = 'Fernando'
   );

5- SELECT EMPREGADO.Nome
FROM EMPREGADO
LEFT JOIN DEPENDENTES ON EMPREGADO.RG = DEPENDENTES.RGResponsavel
WHERE DEPENDENTES.RGResponsavel IS NULL;


6- SELECT DISTINCT EMPREGADO.Nome
FROM EMPREGADO
JOIN DEPARTAMENTO ON EMPREGADO.RG = DEPARTAMENTO.RGGERENTE
JOIN DEPENDENTES ON EMPREGADO.RG = DEPENDENTES.RGResponsavel;


7- SELECT DISTINCT DEPARTAMENTO.Numero
FROM DEPARTAMENTO
JOIN DEPARTAMENTO_PROJETO ON DEPARTAMENTO.Numero = DEPARTAMENTO_PROJETO.NUMERODEPTO
JOIN PROJETO ON DEPARTAMENTO_PROJETO.NUMEROPROJETO = PROJETO.Numero
WHERE PROJETO.Localizacao = 'Rio Claro';

8- SELECT EMPREGADO.Nome, EMPREGADO.RG
FROM EMPREGADO
WHERE EMPREGADO.RG IN (SELECT DISTINCT EMPREGADO.fk_RGSupervisor FROM EMPREGADO WHERE EMPREGADO.fk_RGSupervisor IS NOT NULL);

9- SELECT EMPREGADO.Nome, EMPREGADO.RG, EMPREGADO.Salario
FROM EMPREGADO
WHERE EMPREGADO.Salario >= 2000;

10- SELECT EMPREGADO.Nome, EMPREGADO.RG
FROM EMPREGADO
WHERE EMPREGADO.Nome LIKE 'J%';

11- SELECT EMPREGADO.Nome, EMPREGADO.RG
FROM EMPREGADO
WHERE EMPREGADO.Nome LIKE '%Luiz%' OR EMPREGADO.Nome LIKE '%Luis%';

12- SELECT EMPREGADO.Nome, EMPREGADO.RG
FROM EMPREGADO
JOIN DEPARTAMENTO ON EMPREGADO.fk_Depto = DEPARTAMENTO.Numero
WHERE DEPARTAMENTO.Nome = 'Engenharia Civil';

13- SELECT DEPARTAMENTO.Nome
FROM DEPARTAMENTO
JOIN DEPARTAMENTO_PROJETO ON DEPARTAMENTO.Numero = DEPARTAMENTO_PROJETO.NUMERODEPTO
JOIN PROJETO ON DEPARTAMENTO_PROJETO.NUMEROPROJETO = PROJETO.Numero
WHERE PROJETO.Nome = 'Motor 3';

14- SELECT EMPREGADO.Nome
FROM EMPREGADO
JOIN EMPREGADO_PROJETO ON EMPREGADO.RG = EMPREGADO_PROJETO.RGEmpregado
JOIN PROJETO ON EMPREGADO_PROJETO.NumeroProjeto = PROJETO.Numero
WHERE PROJETO.Nome = 'Financeiro 1';

15- SELECT EMPREGADO.Nome
FROM EMPREGADO
JOIN EMPREGADO SUPERVISOR ON EMPREGADO.fk_RGSupervisor = SUPERVISOR.RG
WHERE SUPERVISOR.Salario BETWEEN 2000 AND 2500;

16- SELECT EMPREGADO.Nome
FROM EMPREGADO
JOIN DEPARTAMENTO ON EMPREGADO.RG = DEPARTAMENTO.RGGERENTE
JOIN DEPENDENTES ON EMPREGADO.RG = DEPENDENTES.RGResponsavel
GROUP BY EMPREGADO.Nome
HAVING COUNT(DEPENDENTES.RGResponsavel) > 0;

17- UPDATE EMPREGADO
SET Salario = 3000.00
WHERE fk_Depto = 2;

18- UPDATE EMPREGADO
SET Salario = Salario * 1.10;

19- SELECT AVG(Salario)
FROM EMPREGADO;

20- SELECT Nome
FROM EMPREGADO
WHERE Salario > (SELECT AVG(Salario) FROM EMPREGADO)
ORDER BY Nome;

